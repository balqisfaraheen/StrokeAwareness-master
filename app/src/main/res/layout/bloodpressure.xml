<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bloodpressure">


    <TextView
        android:text="Blood Pressure (Systolic/Diastolic)"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:textSize="20sp"/>


    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/pressure1RB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="120/80 most of the time"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"/>

        <RadioButton
            android:id="@+id/pressure2RB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="more than 120/80 but less than 140/90 most of the time"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"/>

        <RadioButton
            android:id="@+id/pressure3RB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="usually 140/90 or higher"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"/>

    </RadioGroup>


    <Button
        android:id="@+id/calc"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:onClick="calculateBMI"
        android:text="check reading" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textSize="20sp"/>



</LinearLayout>
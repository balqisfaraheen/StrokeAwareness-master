<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultRisk">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="377dp"
            android:layout_height="268dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/riskTV"
                android:layout_width="133dp"
                android:layout_height="235dp"
                android:background="#B5EAD7"
                android:gravity="center"
                android:text="100%"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/calendarTV"
                    android:layout_width="244dp"
                    android:layout_height="46dp"
                    android:background="#ff9aa2"
                    android:gravity="center"
                    android:text="TODAY"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/categoryTV"
                    android:layout_width="247dp"
                    android:layout_height="63dp"
                    android:background="#c7ceea"
                    android:gravity="center"
                    android:text="LOW RISK"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/bloodIV"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:src="@drawable/tandaseru" />

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="CATEGORY DESCRIPTION :"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriptionTV"
            android:layout_width="341dp"
            android:layout_height="131dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="....description.... "
            android:textColor="#000000"
            android:textSize="15dp" />


        <Button
            android:id="@+id/saveBT"
            android:layout_width="199dp"
            android:layout_height="33dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="150dp"
            android:background="@color/design_default_color_primary"
            android:text="Save"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>





</ScrollView>